{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd backend-service && npm install",
    "watchPatterns": ["backend-service/**"]
  },
  "deploy": {
    "startCommand": "cd backend-service && npm start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
